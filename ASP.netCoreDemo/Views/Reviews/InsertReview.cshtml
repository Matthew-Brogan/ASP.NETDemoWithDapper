@model Reviews

<h2>Tell us what you think:</h2>
@using (Html.BeginForm("InsertReviewToDatabase", "Reviews", "Post"))
{
    <input asp-for="ReviewID" type="hidden" value="" />
    <label asp-for="Reviewer" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="Comment" class="control-label">Comment</label>
    <input type="text" step="0.01" name="Comments" class="form-control" />

    <input type="submit" value="Add review" class="btn btn-primary">
}
